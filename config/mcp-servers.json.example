{
  "mcpServers": {
    "powerpoint": {
      "command": "npx",
      "args": [
        "-y",
        "@gongrzhe/office-powerpoint-mcp-server"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "mode": "stateful",
      "idle_timeout": 1800,
      "max_processes_per_ip": 1,
      "file_path_fields": ["file_path", "saved_path"]
    },
    "excel": {
      "command": "uvx",
      "args": [
        "excel-mcp-server",
        "stdio"
      ],
      "mode": "stateless",
      "file_path_fields": ["output_file", "file_path"]
    }
  }
}
