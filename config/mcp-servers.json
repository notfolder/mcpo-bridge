{
  "mcpServers": {
    "powerpoint": {
      "command": "uvx",
      "args": [
        "--from",
        "office-powerpoint-mcp-server",
        "ppt_mcp_server"
      ],
      "env": {},
      "mode": "stateful",
      "idle_timeout": 3600,
      "max_processes_per_ip": 1,
      "session_persistence": true,
      "file_path_fields": ["file_path", "saved_path", "template_path"]
    },
    "excel": {
      "command": "uvx",
      "args": [
        "excel-mcp-server",
        "stdio"
      ],
      "mode": "stateless"
    }
  }
}
